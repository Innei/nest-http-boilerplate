{
  "name": "nest-http",
  "description": "",
  "author": "Innei <https://innei.ren>",
  "private": true,
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ],
    "after": [
      "sh ./create-tags.sh"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "bundle": "rimraf out && yarn run build && cd dist/src && npx ncc build main.js -o ../../out -m",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start -w",
    "start:dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prod": "cross-env NODE_ENV=production pm2-runtime start ecosystem.config.js",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:debug": "cross-env NODE_ENV=production nest start --debug --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.js"
  },
  "dependencies": {
    "@nestjs/common": "8.1.1",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "8.1.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-fastify": "8.1.1",
    "@nestjs/swagger": "^5.1.0",
    "@typegoose/auto-increment": "^1.0.0",
    "@typegoose/typegoose": "9.1.0",
    "bcrypt": "^5.0.1",
    "cache-manager": "3.4.4",
    "cache-manager-ioredis": "^2.1.0",
    "chalk": "*",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.6",
    "fastify-swagger": "^4.12.4",
    "lodash": "*",
    "mongoose": "6.0.10",
    "nanoid": "^3.1.30",
    "nestjs-typegoose": "7.1.38",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "redis": "3.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "snakecase-keys": "^5.1.0",
    "zx": "^4.2.0"
  },
  "devDependencies": {
    "@innei-util/eslint-config-ts": "latest",
    "@innei-util/prettier": "latest",
    "@nestjs/cli": "8.1.2",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "8.1.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^3.4.2",
    "@types/ioredis": "^4.27.7",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.9",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/redis": "2.8.32",
    "@types/supertest": "^2.0.11",
    "@types/ua-parser-js": "^0.7.36",
    "@vercel/ncc": "^0.31.1",
    "cross-env": "^7.0.3",
    "eslint": "*",
    "fastify": "*",
    "husky": "^7.0.1",
    "ioredis": "*",
    "jest": "27.2.5",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "run-script-webpack-plugin": "^0.0.11",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.4.4",
    "webpack": "*",
    "webpack-node-externals": "^3.0.0"
  },
  "resolutions": {
    "typescript": "^4.4.4"
  }
}